<%- include("./partials/header.ejs"); %>
    
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    
    <%- include("./partials/navbar.ejs"); %>

    <main>
        <h1>Principais artigos</h1>
        
        <div class="row-cards">
            <% articles.forEach((article) => {%>
                <a href="/article/<%= article.id %>">
                    <div class="card">
                        <img src="https://www.vidadeturista.com/wp-content/uploads/2011/09/aniversario-sao-luis-399-anos-1536x1020.jpg" alt="Imagem" />
                        <div class="card-body">
                            <p class="color-red card-created-at"><%= article.createdAt %></p>
                            <h2><%= article.title %></h2>
                            <p class="card-description"><%= article.description %></p>
                            <p><strong>Ler mais</strong></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    </main>
    <script src="/scripts/formatDate.js"></script>

<%- include("./partials/footer.ejs"); %>
